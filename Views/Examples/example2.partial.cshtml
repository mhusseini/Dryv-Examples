@using Dryv.Demo.Models
@using Microsoft.Extensions.Options
@model Model2
@inject IOptions<Options2> Options
@{
    Layout = null;
}

<div class="options">
    <form asp-controller="Options" asp-action="Example2" onsubmit="return updateOptions(this, '#form3')">
        <div class="d-flex justify-content-between">
            <div class="form-group row">
                <label for="CompanyPrefix" class="col-sm-5 col-form-label col-form-label-sm">Company prefix</label>
                <div class="col-sm-7">
                    <input type="text" id="CompanyPrefix" class="form-control form-control-sm" name="CompanyPrefix" value="@Options.Value.CompanyPrefix">
                </div>
            </div>
            <button class="btn btn-secondary btn-sm">Update options</button>
        </div>
    </form>
</div>

<div class="alert alert-info" role="alert">
    <form id="form3" asp-controller="Examples" asp-action="Example2" onsubmit="return sendForm(this)">
        <div class="form-group row">
            <label asp-for="Company" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Company" class="form-control">
                <span asp-validation-for="Company"></span>
            </div>
        </div>

        <button class="btn btn-primary">Send</button>
        <button type="button" class="btn btn-primary" onclick="return sendForm(this)">Send w/o client validation</button>
    </form>
</div>